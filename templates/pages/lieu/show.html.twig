{% extends './base.html.twig' %}

{% block title %}Lieu{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col text-center mt-5 mb-3">
                <h1>Lieu</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-striped table-hover w-75 mx-auto border rounded">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ lieu.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ lieu.nom }}</td>
                    </tr>
                    <tr>
                        <th>Rue</th>
                        <td>{{ lieu.rue }}</td>
                    </tr>
                    <tr>
                        <th>Latitude</th>
                        <td>{{ lieu.latitude }}</td>
                    </tr>
                    <tr>
                        <th>Longitude</th>
                        <td>{{ lieu.longitude }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-center mb-4">
                <a href="{{ path('lieu_index') }}" class="btn btn-outline-primary my-4 mx-3 text-center">Retour</a>
                <a href="{{ path('lieu_edit', {'id': lieu.id}) }}" class="btn btn-outline-success my-4 mx-3 text-center">Modifier</a>
            </div>
        </div>
    </div>
{% endblock %}
