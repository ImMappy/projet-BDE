{% extends './base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <div class="row container w-100 mx-auto">
        <section class="col">
            <div id="map" class="w-75 shadow-lg p-3 mb-5 bg-white rounded border border-dark mt-5" style="height: 80vh;" ></div>
        </section>
        <section class="col">
            <p id="lieu-id" hidden>{{ sortie.lieu.id }}</p>
            <h1 class="text-center my-4">Détail de la sortie</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Etat</th>
                <td>{{ sortie.etat }}</td>
            </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ sortie.nom }}</td>
                </tr>
                <tr>
                    <th>Date et heure de début</th>
                    <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Duree</th>
                    <td>{{ sortie.duree }}</td>
                </tr>
                <tr>
                    <th>Date limite d'inscription</th>
                    <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Nombre de places</th>
                    <td>{{ sortie.nbInscriptionsMax }}</td>
                </tr>
                <tr>
                    <th>Information complémentaire</th>
                    <td>{{ sortie.infosSortie }}</td>
                </tr>
                <tr>
                    <th>Participants</th>
                    <td>{% for element in userCollection %}
                            <li>{{ element.getFullName }}</li>
                        {% endfor %}</td>
                </tr>
                <tr>
                    <td>Nombre de places restantes : {{ userCollection|length}}/{{ sortie.nbInscriptionsMax }}</td>
                </tr>
            </tbody>
        </table>

        <div class="my-5 d-flex justify-content-center flex-column">
            <div>
                {%  if userCollection|length == sortie.nbInscriptionsMax%}
                    <h3 class="text-center">Evenement complet</h3>
                {% endif %}
            </div>
            <div class="d-flex justify-content-center">
                <a href="{{ path('sortie_index') }}" class="btn btn-outline-secondary mx-3">Liste des sorties</a>
                <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="btn btn-outline-secondary mx-3">Modifier</a>
            </div>
            {% if userCollection|length < sortie.nbInscriptionsMax and app.user.id != sortie.organisateur.id and app.user not in userCollection%}
            <a href="{{ path('sortie_register_event', {'id': sortie.id}) }}" class="btn btn-outline-secondary mx-3">S'inscrire</a>
            {% endif %}
            {% if app.user in userCollection %}
            <a href="{{ path('sortie_desist', {'id': sortie.id}) }}" class="btn btn-outline-secondary mx-3">Se désinscrire</a>
            {% endif %}
            <div class="mx-3">
                {% if app.user.id == sortie.organisateur.id %}
                    {{ include('pages/sortie/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
        </section>

    </div>
{% endblock %}
