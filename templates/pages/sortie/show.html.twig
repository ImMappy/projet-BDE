{% extends './base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center my-4">Détail de la sortie</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ sortie.nom }}</td>
                </tr>
                <tr>
                    <th>Date et heure de début</th>
                    <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Duree</th>
                    <td>{{ sortie.duree }}</td>
                </tr>
                <tr>
                    <th>Date limite d'inscription</th>
                    <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Nombre de places</th>
                    <td>{{ sortie.nbInscriptionsMax }}</td>
                </tr>
                <tr>
                    <th>Information complémentaire</th>
                    <td>{{ sortie.infosSortie }}</td>
                </tr>
                <tr>
                    <th>Participants</th>
                    <td>{% for element in userCollection %}
                            <li>{{ element.getFullName }}</li>
                        {% endfor %}</td>
                </tr>
                <tr>
                    <td>Nombre de places restantes : {{ userCollection|length}}/{{ sortie.nbInscriptionsMax }}</td>
                </tr>
            </tbody>
        </table>

        <div class="my-5 d-flex justify-content-center">
            <a href="{{ path('sortie_index') }}" class="btn btn-outline-secondary mx-3">Liste des sorties</a>
            <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="btn btn-outline-secondary mx-3">Modifier</a>
            {% if userCollection|length != sortie.nbInscriptionsMax %}
            <a href="{{ path('sortie_register_event', {'id': sortie.id}) }}" class="btn btn-outline-secondary mx-3">S'inscrire</a>
            {% endif %}
            <div class="mx-3">
                {{ include('pages/sortie/_delete_form.html.twig') }}
            </div>
        </div>


    </div>
{% endblock %}
