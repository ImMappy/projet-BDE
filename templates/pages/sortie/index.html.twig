{% extends './base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    {% if app.user %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-8">
                <h1 class="text-center my-4">Liste des sorties</h1>
            </div>
            <div class="col-4">
                <div class="d-flex justify-content-end me-5 mb-5">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="text-center mb-3">Etudiant</h5>
                            <h6 class="card-subtitle mb-3 text-muted">Informations</h6>
                            <h6 class="card-subtitle mb-3">Nom: {{ app.user.nom }}</h6>
                            <h6 class="card-subtitle mb-3">Prénom: {{ app.user.prenom }}</h6>
                            <h6 class="card-subtitle mb-3">Campus: {{ app.user.campus }}</h6>

                            <a href="{{ path('user_show',{id:app.user.id}) }}" class="card-link">Voir plus</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {% for sortie in sorties %}
                <div class="card" style="width: 20rem;">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ sortie.nom }}</h5>
                        <p class="card-text">{{ sortie.infosSortie }}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Date: {{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m - H:i') : '' }}</li>
                        <li class="list-group-item">Durée: {{ sortie.duree }}</li>
                        <li class="list-group-item">Limite d'inscription: {{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m - H:i') : '' }}</li>
                        <li class="list-group-item">Organisateur: {{ sortie.organisateur.getFullName }}</li>
                    </ul>
                    <div class="card-body text-center">
                        <a href="{{ path('sortie_show', {'id': sortie.id}) }}" class="text-decoration-none">Détail</a>
                        {% if  app.user.id != sortie.organisateur.id %}
                                <a href="{{ path('sortie_register_event',{'id':sortie.id, 'id2':app.user.id}) }}">S'inscrire</a>
                        {% endif %}

                        {% if app.user.id == sortie.organisateur.id %}
                        <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="text-decoration-none">Modifier</a>
                        {% endif %}
{#                        {% if app.user.id in collection %}#}
{#                            <p>se desister</p>#}
{#                        {% endif %}#}
                    </div>
                </div>

            </div>
        </div>
        {% else %}
        <div class="text-center">
            <h2>Aucune sortie à venir</h2>
        </div>
        {% endfor %}
        <a href="{{ path('sortie_new',{'id':app.user.id}) }}">Create new</a>
    </div>
    {% endif %}

{% endblock %}
