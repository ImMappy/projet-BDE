{% extends './base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% if app.user %}
        <div class="row">
            <div class="col-8">
                <h1 class="text-center mt-5">Sortie index</h1>
            </div>
            <div class="col-4">
                <div class="me-5 mb-5 mt-3">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="text-center mb-3">Etudiant</h5>
                            <h6 class="card-subtitle mb-3 text-muted">Informations</h6>
                            <h6 class="card-subtitle mb-3">Nom: {{ app.user.nom }}</h6>
                            <h6 class="card-subtitle mb-3">Prénom: {{ app.user.prenom }}</h6>
                            <h6 class="card-subtitle mb-3">Campus: {{ app.user.campus }}</h6>
                            <div class="text-center">
                                <a href="{{ path('user_show',{id:app.user.id}) }}" class="card-link text-decoration-none">Détail</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row d-flex">
            {% for sortie in sorties %}
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="text-center mb-3">{{ sortie.nom }}</h5>
                    <h6 class="card-subtitle mb-3 text-muted">Informations</h6>
                    <h6 class="card-subtitle mb-3">Date: {{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m - H:i') : '' }}</h6>
                    <h6 class="card-subtitle mb-3">Durée: {{ sortie.duree }} min</h6>
                    <h6 class="card-subtitle mb-3">Limite d'inscription: {{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m - H:i') : '' }}</h6>
                    <h6 class="card-subtitle mb-3">Information: {{ sortie.infosSortie }}</h6>
                    <h6 class="card-subtitle mb-3">Organisateur: {{ sortie.organisateur.getFullName }}</h6>
                    <br>
                    <div class="text-center">
                        <h6 class="card-subtitle mb-3"><a href="{{ path('sortie_show', {'id': sortie.id}) }}" class="text-decoration-none">Afficher</a>
                            <a> - </a>
                            <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="text-decoration-none">Modifier</a></h6>
                    </div>
                </div>
            </div>

        </div>

        {% else %}
            <div class="text-center">
                <h4 class="mx-5">Aucune sortie trouvée</h4>
            </div>
        {% endfor %}
        {% endif %}

        <div class="text-center my-5">
            <a href="{{ path('sortie_new',{'id':app.user.id}) }}" class="btn btn-outline-primary">Nouvelle sortie</a>
        </div>
    </div>

{% endblock %}
