{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% if app.user %}
    <div class="container text-center">
        <div class="row my-5">
            <h1>Liste des étudiants</h1>
        </div>
        <div class="row mb-5">
            <div class="col align-items-start">
                <table class="table table-striped table-hover w-75 mx-auto border rounded">
                    <thead>
                    <tr>
                        <th>Email</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Telephone</th>
                        <th>Administrateur</th>
                        <th>Actif</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.email }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.telephone }}</td>
                            <td>{{ user.isAdministrateur ? 'Yes' : 'No' }}</td>
                            <td>{{ user.isActif ? 'Yes' : 'No' }}</td>
                            <td>
                                <a href="{{ path('user_show', {'id': user.id}) }}" class="text-decoration-none">Détail</a>
                                <span>-</span>
                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="text-decoration-none">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}
    {% if not app.user %}
        <h2>Merci de vous connecter</h2>
    {% endif %}

{% endblock %}
