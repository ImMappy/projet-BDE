{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <div class="row text-center">
            <div class="col my-3">
                <h1>{{ user.prenom }} {{ user.nom }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Telephone</th>
                        <td>{{ user.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Campus</th>
                        <td>{{ user.campus }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row mb-5 mt-2">
            <div class="col text-end">
                <a href="{{ path('user_index') }}"  class="btn btn-outline-secondary">Revenir a l'accueil</a>
            </div>
            <div class="col text-start">
                {{ include('pages/user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>






{% endblock %}
