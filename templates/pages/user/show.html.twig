{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {% if app.user %}
    <div class="container">
        <div class="row text-center">
            <div class="col my-3">
                <h1>Profil</h1>
            </div>
        </div>

        <section class="d-flex justify-content-center ">
        <div class="col-5">
            {%  if app.user.image %}
            <img src="{{ asset('uploads/images/' ~ user.image) }}" width="250" alt="{{ user.image }}">
            {% else %}
                <img src="{{ asset('assets/img/default.png') }}" width="250" alt="{{ user.image }}">

            {%  endif %}
        </div>
        <div class="col-7 ">
                <table class="table">
                    <tbody>
                    <tr scope="p-">
                        <th class="text-start">Prenom</th>
                        <td class="text-capitalize text-end">{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Telephone</th>
                        <td>{{ user.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Campus</th>
                        <td>{{ user.campus }}</td>
                    </tr>
                    </tbody>
                </table>
        </div>
        </section>
        <div class="row mb-5 mt-3">
            <div class="col text-end mx-4">
                <a href="{{ path('sortie_index') }}"  class="btn btn-outline-primary">Revenir a l'accueil</a>
            </div>
            <div class="col text-start mx-4">
                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-primary text-decoration-none">Modifier</a>
            </div>
        </div>

    </div>
    {% endif %}
    {% if not app.user %}
        <h2>Merci de vous connecter</h2>

    {% endif %}






{% endblock %}
